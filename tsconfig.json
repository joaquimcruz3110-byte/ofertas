{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    // Explicitamente informa ao TypeScript onde procurar por declarações de tipo
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    // Adicionado para compatibilidade com imports de módulos
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "supabase", "functions", "supabase/functions"],
  "references": [{ "path": "./tsconfig.node.json" }]
}