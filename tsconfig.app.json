{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": ["DOM", "DOM.Iterable", "ES2020"]
  },
  // Inclui apenas arquivos .ts e .tsx dentro de src para o frontend.
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  // Exclui explicitamente o diretório 'supabase' para evitar erros de compilação no frontend.
  "exclude": ["node_modules", "dist", "supabase"]
}