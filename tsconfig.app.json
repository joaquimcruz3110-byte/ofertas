{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": ["DOM", "DOM.Iterable", "ES2020"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  // Exclui explicitamente os diretórios das funções Supabase para evitar erros de compilação no frontend.
  "exclude": ["node_modules", "dist", "supabase", "functions", "supabase/functions"]
}